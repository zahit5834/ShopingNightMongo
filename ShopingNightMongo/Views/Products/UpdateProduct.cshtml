@model ShopingNightMongo.Dtos.ProductDtos.GetProductByIdDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="ProductId" />
        <label>Ürün Adı:</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Fiyatı:</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Ürün Açıklaması:</label>
        <input type="text" asp-for="ProductDescription" class="form-control" />
        <br />
        <label>Ürün Görseli:</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Ürün Stok Sayısı:</label>
        <input type="text" asp-for="StockCount" class="form-control" />
        <br />
        <label>Ürün Kategorisi:</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.v">
            <option value="">-----Seçiniz------</option>
        </select>
        <br />
        <button class="btn btn-info">Ürünü Güncelle</button>
    </form>
</div>