@model ShopingNightMongo.Dtos.CategoryDtos.GetCategoryDto
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />
        <label>Kategori Adı:</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
        <br />
        <label>Görsel Url:</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <button class="btn btn-success">Kategoriyi Güncelle</button>
    </form>
</div>