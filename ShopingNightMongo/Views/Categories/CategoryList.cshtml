@model List<ShopingNightMongo.Dtos.CategoryDtos.ResultCategoryDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td><a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Categories/CreateCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
</div>